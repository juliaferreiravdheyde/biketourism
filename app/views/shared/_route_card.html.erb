<div class="card-product">
  <div class="pin-icon">
    <% if current_user&.pinned_route == route %>
      <%= button_to route_pinned_routes_path(current_user.pinned_route ), class: "pin-button", remote: true, data: { turbo_frame: "_top", controller: "pin", action: "click->pin#handleSuccess" } do %>
        <%= image_tag 'pin-verde-2.svg', data: { target: "pinButton.pinImage" } %>
      <% end %>
    <% else %>
      <%= button_to route_pinned_routes_path(route_id: route.id), class: "pin-button", remote: true, data: { turbo_frame: "_top", controller: "pin", action: "click->pin#handleSuccess" } do %>
        <%= image_tag 'pin-branco-2.svg', data: { target: "pinButton.pinImage" } %>
      <% end %>
    <% end %>
  </div>

    <%= link_to route do  %>
      <% if route.photos.attached? %>
          <%= cl_image_tag route.photos[0].key, class: "product-image primary-image", data: { 'picker-target': "pimage" } %>
      <% else %>
        <% default_image_url = case route.type_of_route
                              when "Urban"
                                then "urban.webp"
                              when "Suburban"
                                then "suburban.webp"
                              when "CountrySide"
                                then "countryside.webp"
                              when "Mountain"
                                then "mountain.webp"
                              end
        %>
        <%= image_tag default_image_url, class: "product-image primary-image" %>
      <% end %>
    <% end %>

    <div class="card-route-details <%=route.id%>">
      <ul>
        <li><span class="type"><%= route.type_of_route %></span></li>
        <li><h3 class="card-tit"><%= link_to route.name, route %></h3></li>
        <li><p><%= route.description %></p></li>
        <li><span class="distance">Distance: <%= route.distance < 1000 ? "#{route.distance}m" : "#{(route.distance / 1000.0).round(2)}km" %></span></li>
      </ul>
      <% favorite = Favorite.where(route: route, user: current_user) %>
      <% favorite = Favorite.where(route: route, user: current_user) %>
      <% if favorite.present? %>
        <%= link_to favorite_path(favorite.first, path: request.original_fullpath), class: "bookmark", data: { controller: "favorites", action: "toggleFavorite", turbo_method: :delete } do %>
         <%= route.favorites.size %> <i class="fa-solid fa-heart" data-target="favorites.heart"></i>
        <% end %>
      <% else %>
        <%= link_to route_favorites_path(route, path: request.original_fullpath), class: "bookmark", data: { controller: "favorites", action: "toggleFavorite",  turbo_method: :post } do %>
         <%= route.favorites.size %> <i class="fa-sharp fa-regular fa-heart" data-target="favorites.heart"></i>
        <% end %>
      <% end %>
    </div>

</div>
